<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfilePageFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profilePageToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkMainColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profilePageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one"
        android:text="@string/profile_page_title"
        android:textColor="@color/textColor1"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/profilePageToolbar"
        app:layout_constraintEnd_toEndOf="@+id/profilePageToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/personName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:text="@string/person_name"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:icon="@drawable/ic_person"
        app:iconSize="80dp"
        app:iconTint="@color/textColor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePageToolbar" />

    <Button
        android:id="@+id/additionScore"
        android:layout_width="409dp"
        android:layout_height="84dp"
        android:backgroundTint="#FBEB6C"
        android:text="Correct: 12 Wrong: 3"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:icon="@drawable/plus_sign_orange"
        app:iconSize="80dp"
        app:iconTint="@color/textColor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personName" />

    <Button
        android:id="@+id/subtractionScore"
        android:layout_width="409dp"
        android:layout_height="84dp"
        android:backgroundTint="#FBEB6C"
        android:text="Correct: 11 Wrong: 4"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:icon="@drawable/minus_sign_orange"
        app:iconSize="80dp"
        app:iconTint="@color/textColor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/additionScore" />

    <Button
        android:id="@+id/multiplicationScore"
        android:layout_width="409dp"
        android:layout_height="84dp"
        android:backgroundTint="#FBEB6C"
        android:text="Correct: 11 Wrong: 4"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:icon="@drawable/multiplication_sign_orange"
        app:iconSize="80dp"
        app:iconTint="@color/textColor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtractionScore" />

    <Button
        android:id="@+id/divisionScore"
        android:layout_width="409dp"
        android:layout_height="84dp"
        android:backgroundTint="#FBEB6C"
        android:foregroundGravity="left"
        android:text="Correct: 13 Wrong: 2"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:icon="@drawable/division_icon"
        app:iconSize="80dp"
        app:iconTint="@color/textColor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiplicationScore" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>